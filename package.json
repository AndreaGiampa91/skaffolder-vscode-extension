{
  "name": "skaffolder-vscode",
  "displayName": "skaffolder-vscode",
  "description": "Skaffodler vscode plugin",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.34.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "skaffolder-explorer",
          "title": "Skaffolder",
          "icon": "media/logo.svg"
        }
      ]
    },
    "views": {
      "skaffolder-explorer": [
        {
          "id": "skaffolderExplorerModel",
          "name": "Models"
        },
        {
          "id": "skaffolderExplorerPage",
          "name": "Pages"
        }
      ]
    },
    "configuration": [
      {
        "title": "Explorer",
        "properties": {
          "treeProvider.autorefresh": {
            "type": "boolean",
            "default": false
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "typescript": "^3.3.1",
    "vscode": "^1.1.28",
    "tslint": "^5.12.1",
    "@types/node": "^10.12.21",
    "@types/mocha": "^2.2.42"
  },
  "dependencies": {
    "@types/yaml": "^1.0.2",
    "jsonc-parser": "^0.4.2",
    "skaffolder-cli": "^1.1.25",
    "yaml": "^1.6.0"
  }
}

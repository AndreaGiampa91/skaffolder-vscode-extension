{
  "name": "skaffolder-vscode",
  "displayName": "skaffolder-vscode",
  "description": "Skaffodler vscode plugin",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.34.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "skaffolderExplorer",
          "title": "Skaffolder",
          "icon": "media/logo.svg"
        }
      ]
    },
    "views": {
      "skaffolderExplorer": [
        {
          "id": "skaffolderExplorerModel",
          "name": "Models",
          "when": "isSkaffolderProject"
        },
        {
          "id": "skaffolderExplorerPage",
          "name": "Pages",
          "when": "isSkaffolderProject"
        },
        {
          "id": "skaffolderExplorerTemplates",
          "name": "Create project",
          "when": "!isSkaffolderProject"
        }
      ]
    },
    "commands": [
      {
        "command": "skaffolder.editNode",
        "title": "Edit",
        "icon": {
          "light": "media/light/editScuro.svg",
          "dark": "media/dark/editGrigio.svg"
        }
      },
      {
        "command": "skaffolder.openfiles",
        "title": "Open files",
        "icon": {
          "light": "media/light/openFilesScuro.svg",
          "dark": "media/dark/openFilesGrigio.svg"
        }
      },
      {
        "command": "skaffolder.generate",
        "title": "Generate",
        "icon": {
          "light": "media/light/generateScuro.svg",
          "dark": "media/dark/generateGrigio.svg"
        }
      },
      {
        "command": "skaffolder.export",
        "title": "Export YAML to Skaffolder",
        "icon": {
          "light": "media/light/uploadScuro.svg",
          "dark": "media/dark/uploadGrigio.svg"
        }
      },
      {
        "command": "skaffolder.createPage",
        "title": "Create new Page",
        "icon": {
          "light": "media/light/page.svg",
          "dark": "media/dark/page.svg"
        }
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "skaffolder.generate",
          "group": "navigation",
          "when": "isSkaffolderProject"
        },
        {
          "command": "skaffolder.export",
          "group": "navigation",
          "when": "isSkaffolderProject"
        },
        {
          "command": "skaffolder.createPage",
          "group": "navigation",
          "when": "isSkaffolderProject && view==skaffolderExplorerModel"
        }
      ],
      "view/item/context": [
        {
          "command": "skaffolder.editNode",
          "group": "inline",
          "when": "viewItem != empty && isSkaffolderProject"
        },
        {
          "command": "skaffolder.openfiles",
          "group": "inline",
          "when": "viewItem != empty && isSkaffolderProject"
        }
      ]
    },
    "configuration": [
      {
        "title": "Explorer",
        "properties": {
          "treeProvider.autorefresh": {
            "type": "boolean",
            "default": false
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "typescript": "^3.3.1",
    "vscode": "^1.1.28",
    "tslint": "^5.12.1",
    "@types/node": "^10.12.21",
    "@types/mocha": "^2.2.42"
  },
  "dependencies": {
    "@types/yaml": "^1.0.2",
    "handlebars": "^4.2.0",
    "handlebars-helpers": "^0.10.0",
    "jsonc-parser": "^0.4.2",
    "yaml": "^1.6.0",
    "skaffolder-cli": "1.1.30"
  }
}
